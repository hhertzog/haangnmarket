<h2>My Posts</h2>

<%= link_to 'Write a New Post', new_post_path, class:"btn btn-outline-success" %>
<br/><br/>

<table class="table table-hover table-light">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th><strong>Title</strong></th>
      <th>Neighborhood</th>
      <th>Category</th>
      <th>Price</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'View', post, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
        <td><strong><%= post.title %></strong></td>
        <td><%= post.neighborhood %></td>
        <td><%= post.category %></td>
        <td>
          <%= post.price %>
          <% if post.price != nil %>
            Ïõê
          <% end %>
        </td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

