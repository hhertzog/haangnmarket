<h2>나의 판매내역</h2>

<%= link_to '새 게시글', new_post_path, class:"btn btn-outline-success" %>
<%= link_to '전체 삭제', home_index_path, method: :delete, data: { confirm: '정말로 판매내역을 전체 삭제하고 싶으세요?' }, class:"btn btn-outline-danger" %>
<br/><br/>

<table class="table table-hover table-light">
  <thead>
    <tr>
      <th></th>
      <th><strong>제목</strong></th>
      <th>동네</th>
      <th>카테고리</th>
      <th>가격</th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to '보기', post, class:"btn btn-outline-primary" %></td>
        <td><strong><%= post.title %></strong></td>
        <td><%= post.neighborhood %></td>
        <td><%= post.category %></td>
        <td>
           <% if post.price != nil %>
            <%= "#{post.price}원" %>
          <% end %>
        </td>
        <td><%= post.body %></td>

        <td><%= link_to '수정', edit_post_path(post), class:"btn btn-outline-success" %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: '정말로 이 게시글을 삭제하고 싶으세요?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>

<br>