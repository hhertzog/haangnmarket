<h2>프로필 설정</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3 form-group col-lg-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"이메일" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-3 form-group col-lg-3">
    <% if @minimum_password_length %>
      <em>최소 <%= @minimum_password_length %>글자</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"새 비밀번호" %>
  </div>

  <div class="field mb-3 form-group col-lg-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"새 비밀번호 (확인)" %>
  </div>

  <div class="field mb-3 form-group col-lg-3">
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"현재 비밀번호" %>
  </div>

  <div class="actions">
    <%= f.submit "완료", class:"btn btn-outline-primary" %>
  </div>
<% end %>

<br/>
<h3>프로필 삭제</h3>

<%= button_to "프로필 삭제", registration_path(resource_name), data: { confirm: "정말로 프로필을 삭제하고 싶으세요?" }, method: :delete, class:"btn btn-outline-danger" %>