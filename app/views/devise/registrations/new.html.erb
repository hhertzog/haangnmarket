<h2>가입하기</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3 form-group col-lg-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"이메일" %>
  </div>

  <div class="field mb-3 form-group col-lg-3">
    <% if @minimum_password_length %>
      <em>최소 <%= @minimum_password_length %>글자</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"비밀번호" %>
  </div>

  <div class="field mb-3 form-group col-lg-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"비밀번호 (확인)" %>
  </div>

  <div class="actions">
    <%= f.submit "가입하기", class:"btn btn-outline-primary" %>
  </div>
<% end %>
<br/><br/>

<%= render "devise/shared/links" %>
