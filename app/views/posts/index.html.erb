<h2>Posts</h2>

<% if user_signed_in? %>
  <%= link_to 'Write a New Post', new_post_path, class:"btn btn-outline-success" %>
  <br/><br/>
<% end %>

<table class="table table-hover table-light">
  <thead>
    <tr>
      <th></th>
      <th><strong>Title</strong></th>
      <th>Neighborhood</th>
      <th>Category</th>
      <th>Price</th>
      <th>Details</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <td><%= link_to 'View', post, class:"btn btn-outline-primary" %></td>
        <td><strong><%= post.title %></strong></td>
        <td><%= post.neighborhood %></td>
        <td><%= post.category %></td>
        <td>
          <% if post.price != nil %>
            <%= "#{post.price}원" %>
          <% end %>
        </td>
        <td><%= post.body %></td>

        <!-- allow user to edit/delete posts that they own on "All Posts" page-->
        <% if !user_signed_in? || (post.user_id == current_user.id) %>
          <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-success" %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>