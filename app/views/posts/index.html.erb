<h4>Posts</h4>

<% if user_signed_in? %>
  <%= link_to 'Write a New Post', new_post_path %>
  <br/><br/>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Neighborhood</th>
      <th>Category</th>
      <th>Price</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.neighborhood %></td>
        <td><%= post.category %></td>
        <td><%= post.price %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'View', post %></td>

        <% if user_signed_in? && (post.user_id == current_user.id) %>

          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>