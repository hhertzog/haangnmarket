<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :neighborhood, class:"form-control", placeholder:"Neighborhood" %>
  </div>

  <%= render 'posts/category_dropdown' %>

  <div class="field mb-3">
    <%= form.number_field :price, class:"form-control", placeholder:"Price" %>
  </div>

  <div class="field mb-3">
    <%= form.text_area :body, class:"form-control", placeholder:"Write details about your item here!", rows: 5 %>
  </div>

  <div class="field mb-3">
    <%= form.number_field :user_id, id: :post_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
