<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> 에러 때문에 게시글 올리기 실패했습니다:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.text_field :title, class:"form-control", placeholder:"글 제목 (필수사항)" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :neighborhood, class:"form-control", placeholder:"동네 (필수사항)" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :category, class:"form-control", placeholder:"카테고리 (선택사항)" %>
  </div>

  <div class="field mb-3">
    <%= form.number_field :price, class:"form-control", placeholder:"₩ 가격 (선택사항)" %>
  </div>

  <div class="field mb-3">
    <%= form.text_area :body, class:"form-control", placeholder:"이 동네에 올릴 게시글 내용을 작성해주세요! (선택사항)", rows: 5 %>
  </div>

  <div class="field mb-3">
    <%= form.number_field :user_id, id: :post_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-outline-success" %>
  </div>
<% end %>
